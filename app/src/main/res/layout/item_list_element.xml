        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
</layout>
